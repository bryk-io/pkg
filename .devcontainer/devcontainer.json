{
  "name": "Go 1.19",
  "image": "mcr.microsoft.com/devcontainers/base:debian",
  "remoteUser": "vscode",
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined"
  ],
  "features": {
    // base OS utils
    "ghcr.io/devcontainers/features/common-utils:1": {
      "installZsh": "true",
      "username": "vscode",
      "uid": "1000",
      "gid": "1000",
      "upgradePackages": "false"
    },
    // install Go 1.19.x
    "ghcr.io/devcontainers/features/go:1": {
      "version": "1.19"
    },
    // install 'gh'
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    },
    // required to connect remotely to the devcontainer
    "ghcr.io/devcontainers/features/sshd:1": {
        "version": "latest"
    },
    // required to enable "live share" capabilities
    "ghcr.io/bryk-io/devcontainers-features/live-share:1": {},
    // protobuf compiler and plugins
    "ghcr.io/bryk-io/devcontainers-features/protobuf-tools:1": {
      "bufVersion": "1.9.0"
    }
    // "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
    //   "version": "latest",
    //   "minikube": "none"
    // },
    // "ghcr.io/devcontainers/features/node:1": {
    //   "version": "lts"
    // },
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.profiles.linux": {
          "default-shell": {
            "path": "/bin/zsh"
          }
        },
        "terminal.integrated.defaultProfile.linux": "default-shell",
        "workbench.iconTheme": "eq-material-theme-icons-light",
        "go.toolsManagement.checkForUpdates": "local",
        "go.useLanguageServer": true,
        "go.gopath": "/go",
        "protoc": {
          "options": [
            "--proto_path=${workspaceRoot}\/proto"
          ]
        }
      },
      "extensions": [
        "rangav.vscode-thunder-client",
        "spmeesseman.vscode-taskexplorer"
      ]
    }
  }
}
