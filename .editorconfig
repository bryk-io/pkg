# https://editorconfig.org
# top-most config file
root = true

# Default styles:
# - UNIX-style newlines
# - newline ending every file
# - 2 space indents
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2

[*.go]
indent_style = tab

[Makefile]
indent_style = tab
